<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreateNewUserActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            >

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"
                 android:layout_margin="@dimen/_10sdp"
                android:contentDescription="logo"
                android:src="@drawable/arrow_left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:contentDescription="logo"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/waves_of_food"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_25ssp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:fontFamily="@font/lato_bold"
                    android:text="@string/create_new_user_admin"
                    android:textAlignment="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_20ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_10sdp">

                    <EditText
                        android:id="@+id/editName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_57sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@drawable/edittextshape"
                        android:drawableStart="@drawable/usernew"
                        android:drawablePadding="@dimen/_10sdp"
                        android:hint="@string/name_of_owner"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TextSizeCheck" />

                    <EditText
                        android:id="@+id/editNameOfRestaurant"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_57sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:autofillHints="username"
                        android:background="@drawable/edittextshape"
                        android:drawableStart="@drawable/home"
                        android:drawablePadding="@dimen/_10sdp"
                        android:ems="10"
                        android:hint="@string/name_of_restaurant"
                        android:inputType="textPersonName"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TextSizeCheck" />

                    <EditText
                        android:id="@+id/editAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_57sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:autofillHints="username"
                        android:background="@drawable/edittextshape"
                        android:drawableStart="@drawable/address"
                        android:drawablePadding="@dimen/_10sdp"
                        android:ems="10"
                        android:hint="@string/address"
                        android:inputType="textPostalAddress"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TextSizeCheck" />

                    <EditText
                        android:id="@+id/editPhone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_57sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:autofillHints="username"
                        android:background="@drawable/edittextshape"
                        android:drawableStart="@drawable/phone"
                        android:drawablePadding="@dimen/_10sdp"
                        android:ems="10"
                        android:hint="@string/phone"
                        android:inputType="phone|number"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TextSizeCheck" />

                    <EditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_57sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:autofillHints=""
                        android:background="@drawable/edittextshape"
                        android:drawableStart="@drawable/mail"
                        android:drawablePadding="@dimen/_10sdp"
                        android:ems="10"
                        android:hint="@string/email_or_phone_number"
                        android:inputType="textEmailAddress"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TextSizeCheck" />

                    <EditText
                        android:id="@+id/editPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_57sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:autofillHints="password"
                        android:background="@drawable/edittextshape"
                        android:drawableStart="@drawable/lock"
                        android:drawablePadding="@dimen/_10sdp"
                        android:ems="10"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:paddingStart="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/hintColor"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCreateAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:background="@drawable/greenbuttonshape"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:text="@string/create_new_admin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>